package lab2.simulate;
import lab2.event.*;

public class ABPSender {
	
	private EventScheduler es;
	
	private int sn;
	private int nextSN;
	private double timeoutValue;
	private double currentTime;
	
	private double packetSize;
	private double headerSize;
	private double linkRate;
	private double processTime;
	private double propDelay;
	
	private double ber;
	
	public ABPSender(
			double timeout, double ps, double hs, double lr, double pd, double ber){
		sn = 0;
		nextSN = 1;
		timeoutValue = timeout;
		currentTime = 0;
		packetSize = ps;
		headerSize = hs;
		linkRate = lr;
		propDelay = pd;
		this.es = es;
		processTime = (hs + ps)/lr;
		
		es = new EventScheduler();
		this.ber = ber;
		
	}
	
	public Event send(int sn){
		Channel.simulate(ber, propDelay, currentTime + processTime, packetSize + headerSize);
		boolean forwardDropped = Channel.isPacketDropped();
		boolean forwardError = Channel.isPacketError();
		Channel.simulate(ber, propDelay, Channel.getLastTime()+ (headerSize / linkRate), headerSize);
		boolean reverseDropped = Channel.isPacketDropped();
		boolean reverseError = Channel.isPacketError();
		
		if(forwardDropped || reverseDropped){
			return null;
		}
		
		
		return new Event(EventType.ACK, Channel.getLastTime(), nextSN, forwardError || reverseError );
	}
	
	public double simulate(int successfulArrivals){
		double transferTime;
		currentTime = 0;
		Event e;
		int count = 0;
		while( count < successfulArrivals ){
			//process next event
			e = es.dequeue();
			if(e != null){
				if(e.getType() == EventType.TO){
					currentTime = e.getTime();
					es.queue(new Event(EventType.TO, currentTime+timeoutValue));	
					es.queue(send(sn));
				}else if(!e.isError()){
					currentTime = e.getTime();
					if(e.getSN() == nextSN){
						count++;
						es.purgeTimeouts();
						sn = (sn+1)%2;
						nextSN = (nextSN+1)%2;
						es.queue(new Event(EventType.TO, currentTime+timeoutValue));	
						es.queue(send(sn));
					}
					
				}
			}else{
				es.queue(new Event(EventType.TO, currentTime + processTime+timeoutValue));	
				es.queue(send(sn));
			}
			
			System.out.println(es.size() + " packets Arrived: " + count);
			
		}
		return currentTime;
		
	}

}

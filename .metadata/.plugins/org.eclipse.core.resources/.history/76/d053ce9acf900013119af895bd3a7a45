package lab2.event;

import java.util.ArrayList;
import java.util.Queue;

public class EventScheduler {

	ArrayList<Event> eventSet; 
	Queue<Integer> timeoutSet; //a list of all live timeouts
	
	public EventScheduler(){
		eventSet = new ArrayList<Event>();
		timeoutSet = new Queue<Integer>(); //a list of all live timeouts
	}
	
	public void queue(Event event) {
		if(event == null)
			return;
		
		eventSet.add(event);
		if(event.getType() == EventType.TO){
			timeoutSet.add(eventSet.size()-1);
		}
		
	}

	public Event dequeue() {
		// TODO Auto-generated method stub
		return null;
	}

	public void purgeTimeouts() {
		// TODO Auto-generated method stub
		Integer i = null;
		while(i = timeoutSet.poll()){
			
		}
	}

}

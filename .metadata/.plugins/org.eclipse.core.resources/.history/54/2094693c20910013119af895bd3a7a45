package lab2;

import lab2.simulate.ABPSender;

public class Lab2 {

	public static void main(String[] args) {
		questionOne();
	}

	public static void questionOne(){
		double tau = 5.0/1000; //tau in s
		double C = 655360.0; //c in b/s
		double h = 54.0;
		double p = 1500.0;
		double[] timeoutOne = {(2.5 * tau), (5 * tau), (10 * tau), (12.5 * tau) };
		double[] ber = {0, 0.00001, 0.0001};
		
		ABPSender abp;
		for(int n = 0; n < 3; n++){
			for(int i = 0; i < 4; i++){
				abp = new ABPSender(timeoutOne[i], p, h, C, tau, ber[n]);
				System.out.println("With tau:" + timeoutOne[i] + " and ber: " + ber[n] + " " + 100000/abp.simulate(100000) + "p/s for 100000 arrivals");
				abp = new ABPSender(timeoutOne[i], p, h, C, tau, ber[n]);
				System.out.println("With tau:" + timeoutOne[i] + " and ber: " + ber[n] + " " + 200000/abp.simulate(200000) + "p/s for 200000 arrivals");
			}
		}
		
		tau = 250.0/1000;
		double[] timeoutTwo = {2.5 * tau, 5 * tau, 10 * tau, 12.5 * tau };
		for(int n = 0; n < 3; n++){
			for(int i = 0; i < 4; i++){
				abp = new ABPSender(timeoutTwo[i], p, h, C, tau, ber[n]);
				System.out.println("With tau:" + timeoutTwo[i] + " and ber: " + ber[n] + " " + 100000/abp.simulate(100000) + "p/s for 100000 arrivals");
				abp = new ABPSender(timeoutTwo[i], p, h, C, tau, ber[n]);
				System.out.println("With tau:" + timeoutTwo[i] + " and ber: " + ber[n] + " " + 200000/abp.simulate(200000) + "p/s for 200000 arrivals");
			}
		}
	}

}

